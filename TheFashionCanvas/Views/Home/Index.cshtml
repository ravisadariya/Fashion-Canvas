<div class="container mt-5 mb-5">
    <!-- Hero Section -->
    <div class="jumbotron text-center bg-light p-5 rounded">
        <h1 class="display-4">Welcome to The Fashion Canvas</h1>
        <p class="lead">Explore the latest trends and shop your favorite styles.</p>
        <a href="~/product" class="btn btn-primary btn-lg">Shop Now</a>
    </div>

    <!-- Featured Products Section -->
    <div class="row text-center mt-5">
        <div class="col-md-12">
            <h2>Featured Products</h2>
            <hr class="mb-4">
        </div>

        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card shadow-sm product-card hover-effect">
                    <div class="product-image-wrapper">
                        <img src="~/images/@product.ImagePath" class="card-img-top product-image" alt="@product.Name">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Price.ToString("C")</p>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-outline-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Testimonials Section -->
    <div class="row mt-5 mb-4">
        <div class="col-md-12 text-center">
            <h2>What Our Customers Say</h2>
            <hr class="mb-4">
        </div>

        <!-- Customer Review Card with Hover Effect -->
        <div class="col-md-4">
            <div class="card shadow-sm border-light mb-3 hover-effect">
                <div class="card-body text-center">
                    <i class="bi bi-star-fill text-warning" style="font-size: 2rem;"></i>
                    <blockquote class="blockquote mb-0 mt-2">
                        <p class="font-italic">"Great products and fast delivery!"</p>
                        <footer class="blockquote-footer mt-3">
                            <cite title="Source Title">Jack Sparrow</cite>
                        </footer>
                    </blockquote>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-light mb-3 hover-effect">
                <div class="card-body text-center">
                    <i class="bi bi-star-fill text-warning" style="font-size: 2rem;"></i>
                    <blockquote class="blockquote mb-0 mt-2">
                        <p class="font-italic">"I love my new pair of clothes from The Fashion Canvas! got it just in 150$"</p>
                        <footer class="blockquote-footer mt-3">
                            <cite title="Source Title">Baburao Ganpatrao Apte</cite>
                        </footer>
                    </blockquote>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-light mb-3 hover-effect">
                <div class="card-body text-center">
                    <i class="bi bi-star-fill text-warning" style="font-size: 2rem;"></i>
                    <blockquote class="blockquote mb-0 mt-2">
                        <p class="font-italic">"Amazing quality and customer service."</p>
                        <footer class="blockquote-footer mt-3">
                            <cite title="Source Title">Tony Stark</cite>
                        </footer>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .product-card {
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .product-image-wrapper {
        height: 300px; 
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
         
    }

    .product-image {
        object-fit: fill;
        max-height: 100%;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.1); 
    }

    .hover-effect:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }
</style>
