@model TheFashionCanvas.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center text-danger"><i class="bi bi-trash"></i> @ViewData["Title"]</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h3 class="text-center mb-3">Are you sure you want to delete this?</h3>
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="CategoryId" />
                        <div class="d-flex justify-content-between">
                            <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
